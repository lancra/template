{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/lancra/template/main/.template/tokens.schema.json",
  "definitions": {
    "generatedToken": {
      "title": "Generated Template Token Definition",
      "description": "The definition of a replacement token, including the generated used to dynamically create the value.",
      "type": "object",
      "properties": {
        "generator": {
          "description": "The target generator used to create the value for token replacement.",
          "type": "string",
          "format": "file-path",
          "minLength": 1
        }
      },
      "required": [
        "generator"
      ]
    },
    "staticToken": {
      "title": "Static Template Token Definition",
      "description": "The definition of a replacement token, including the target value used for application.",
      "type": "object",
      "properties": {
        "value": {
          "description": "The target value used for token replacement.",
          "type": "string",
          "minLength": 1
        },
        "example": {
          "description": "The sample value to show usage of the token within the template.",
          "type": "string",
          "minLength": 1
        },
        "default": {
          "description": "Whether to use the example value as the default when none is provided.",
          "type": "boolean"
        }
      },
      "required": [
        "value",
        "example",
        "default"
      ]
    },
    "token": {
      "title": "Template Token Definition",
      "description": "",
      "type": "object",
      "properties": {
        "description": {
          "description": "The description of the token usage and format.",
          "type": "string",
          "minLength": 1
        },
        "kind": {
          "description": "The kind of template token.",
          "type": "string",
          "enum": [
            "generated",
            "static"
          ],
          "default": "static"
        }
      },
      "required": [
        "description",
        "kind"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "kind": {
                "const": "generated"
              }
            }
          },
          "then": {
            "$ref": "#/definitions/generatedToken"
          }
        },
        {
          "if": {
            "properties": {
              "kind": {
                "const": "static"
              }
            }
          },
          "then": {
            "$ref": "#/definitions/staticToken"
          }
        }
      ]
    }
  },
  "title": "Template Application Specification",
  "description": "The specification used to apply a template to a target repository.",
  "type": "object",
  "properties": {
    "tokens": {
      "description": "The token definitions used for replacement when applying a template.",
      "type": "object",
      "patternProperties": {
        "^(?=[A-Z])[A-Z_].*(?<!_)$": {
          "$ref": "#/definitions/token"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "required": [
    "tokens"
  ]
}
