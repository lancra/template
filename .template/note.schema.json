{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/lancra/template/main/.template/note.schema.json",
  "title": "Template Application Note",
  "description": "The definition of a note used to modify a template commit during application.",
  "type": "object",
  "properties": {
    "executions": {
      "description": "The executions to invoke as part of the commit application.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "https://raw.githubusercontent.com/lancra/template/main/.template/specification.schema.json#/definitions/execution"
      }
    }
  },
  "required": [
    "executions"
  ]
}
